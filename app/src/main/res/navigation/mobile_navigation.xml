<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/item_list_fragment">

    <fragment
        android:id="@+id/login_fragment"
        android:name="com.example.firstapp.auth.login.LoginFragment"
        android:label="@string/login"
        tools:layout="@layout/login_fragment" />

    <fragment
        android:id="@+id/item_list_fragment"
        android:name="com.example.firstapp.book_corner.items.BookListFragment"
        android:label="@string/item_list"
        tools:layout="@layout/book_list_fragment" />

    <fragment
        android:id="@+id/item_details_fragment"
        android:name="com.example.firstapp.book_corner.item.BookDetailsFragment"
        android:label="@string/item_details"
        tools:layout="@layout/book_details_fragment" />

    <fragment
        android:id="@+id/item_edit_fragment"
        android:name="com.example.firstapp.book_corner.item.BookEditFragment"
        android:label="@string/item_edit"
        tools:layout="@layout/book_edit_fragment" />

</navigation>